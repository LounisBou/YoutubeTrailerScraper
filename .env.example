# Mount point for the SMB share
SMB_MOUNT_POINT=/Volumes
USE_SMB_MOUNT=true

# Scan sample size for detecting existing trailers in media folders
SCAN_SAMPLE_SIZE=100

# Movies directories to scan (JSON array format - single line)
MOVIES_PATHS=["/path/to/movies1/", "/path/to/movies2/"]

# TV shows directories to scan (JSON array format - single line)
TVSHOWS_PATHS=["/path/to/tvshows1/", "/path/to/tvshows2/"]

# Season subdirectory pattern (for TV shows)
TVSHOWS_SEASON_SUBDIR_PATTERN=Season {season_number}

# Youtube Search URLs
YOUTUBE_SEARCH_URL=https://www.youtube.com/results?search_query={query}

# Default search query format for trailers
DEFAULT_SEARCH_QUERY_FORMAT={title} {year} bande annonce

# TMDB API configuration
# Get your API key from: https://www.themoviedb.org/settings/api
TMDB_API_BASE_URL=https://api.themoviedb.org/3
TMDB_API_KEY=your_api_key_here
TMDB_READ_ACCESS_TOKEN=your_read_access_token_here

# TMDB languages for multi-language search (JSON array format)
# The search will try each language in order until trailers are found
# Common language codes: fr-FR (French), en-US (English), de-DE (German), es-ES (Spanish), it-IT (Italian)
TMDB_LANGUAGES=["fr-FR", "en-US"]

# YouTube cookie configuration (for bypassing bot detection)
# Option 1 (Recommended): Use cookies directly from your browser
# Supported browsers: firefox, chrome, chromium, edge, opera, brave, safari
# YOUTUBE_COOKIES_FROM_BROWSER=chrome

# Option 2: Use a cookies file in Netscape format
# YOUTUBE_COOKIES_FILE=/path/to/cookies.txt

# Plex server configuration
PLEX_SERVER_URL=http://localhost:32400
PLEX_TOKEN=YOUR_PLEX_TOKEN_HERE
